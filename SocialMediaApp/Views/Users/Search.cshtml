@model List<ApplicationUser>

<h2>Search results</h2>

@if (!Model.Any())
{
    <p>No users found.</p>
}
else
{
    <ul class="list-group">
        @foreach (var user in Model)
        {
            <a asp-controller="Users"
               asp-action="Show"
               asp-route-id="@user.Id"
               class="list-group-item list-group-item-action d-flex align-items-center">

               <div class="post-pfp-container">
                    <img src="~/images/Profiles/@user.ProfilePicture"
                         class="me-3"
                         alt="profile" />
               </div>

                <div>
                    <strong><i class="bi bi-person"></i> @user.FirstName @user.LastName</strong><br />
                    <small><i class="bi bi-book-half"></i> @user.Description</small>
                </div>
            </a>
        }
    </ul>
}
