@model SocialMediaApp.Models.ApplicationUser

<form method="post" 
asp-action = "Delete"
asp-controller="Users">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this user?</h5>
        <p class="card-text">This will delete all account information and likes, but it won't delete the user's posts, comments and group messages</p>
        <button class="btn btn-danger" type="submit">Delete account</button>
      </div>
    </div>
</form>
