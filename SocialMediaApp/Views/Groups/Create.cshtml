@model Group

<div class="d-flex justify-content-center mt-5">
    <div class="w-700px-responsive">
        <div class="card shadow-sm p-4">

            <h3 class="mb-4 text-center">
                <i class="bi bi-people-fill me-2"></i>
                Create a new group
            </h3>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <i class="bi bi-tag-fill"></i>
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Group name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">

                    <i class="bi bi-card-text"></i>

                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description"
                              class="form-control"
                              rows="4"
                              placeholder="What is this group about?"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 me-2">
                        Create group
                    </button>

                    <button asp-action="Index" class="btn btn-outline-secondary me-2">
                        Cancel
                    </button>

                </div>

            </form>

        </div>
    </div>
</div>
