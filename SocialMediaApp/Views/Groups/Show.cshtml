@using System.Security.Claims
@model Group

@{
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    bool isMember = User.Identity.IsAuthenticated &&
                    Model.Users.Any(u => u.UserId == currentUserId);

    var membership = Model.Users.FirstOrDefault(u => u.UserId == currentUserId);
}

@if (TempData["message"] != null)
{
    var messageType = TempData["messageType"]?.ToString() ?? "info";
    <div class="alert alert-@messageType alert-dismissible fade show" role="alert">
        @TempData["message"]
        <!--<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>-->
    </div>
}

<h2>@Model.Name</h2>

<p class="text-muted">@Model.Description</p>

<hr />

<!-- Membrii grupului -->

<h5>
    <i class="bi bi-people"></i>
    Members (@Model.Users.Count)
</h5>

<ul class="list-group mb-4">
    @foreach (var gu in Model.Users)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <a asp-controller="Users"
                   asp-action="Show"
                   asp-route-id="@gu.UserId">
                    @gu.User?.FirstName @gu.User?.LastName
                </a>

                @if (gu.IsModerator)
                {
                    <span class="badge bg-warning text-dark ms-2">
                        Moderator
                    </span>
                }

            </div>

            @if (ViewBag.IsModerator == true && !gu.IsModerator)
            {
                <form asp-action="RemoveUser" method="post" class="d-inline">
                    <input type="hidden" name="groupId" value="@Model.Id" />
                    <input type="hidden" name="userId" value="@gu.UserId" />
                    <button class="btn btn-sm btn-danger">
                        Remove
                    </button>
                </form>
            }

        </li>
    }
</ul>


<!--buton join sau status cerere-->
@if (User.Identity.IsAuthenticated)
{
    bool hasRequest = ViewBag.HasJoinRequest == true;

    if (!isMember && !hasRequest)
    {
        <form asp-action="Join" method="post">
            <input type="hidden" name="groupId" value="@Model.Id" />
            <button class="btn btn-success btn-sm">Join</button>
        </form>
    }
    //de verificat daca afiseaza asta frumos
    else if (hasRequest)
    {
        <span class="text-muted">Request sent (pending)</span>
    }

    <hr />
}


@if (ViewBag.IsModerator == true)
{

    <h5>
        <i class="bi bi-arrow-down-square"></i>
        Join requests
    </h5>

    var requests = ViewBag.JoinRequests as List<GroupJoinRequest>;

    if (!requests.Any())
    {
        <p class="text-muted">There are no requests.</p>
    }
    else
    {
        foreach (var r in requests)
        {
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div>
                    <a asp-controller="Users"
                       asp-action="Show"
                       asp-route-id="@r.UserId">
                        @r.User?.FirstName @r.User?.LastName
                    </a>
                </div>

                <div>
                    <form asp-action="Approve" method="post" class="d-inline">
                        <input type="hidden" name="requestId" value="@r.Id" />
                        <button class="btn btn-success btn-sm">Approve</button>
                    </form>

                    <form asp-action="Reject" method="post" class="d-inline">
                        <input type="hidden" name="requestId" value="@r.Id" />
                        <button class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </div>
            </div>
        }
    }
    <hr />
}

<!-- Mesaje grup -->

@if (isMember || ViewBag.isAdmin)
{
    <h5>
        <i class="bi bi-chat-dots"></i>
        Messages
    </h5>

    <a asp-action="Messages"
       asp-controller="Groups"
       asp-route-groupId="@Model.Id"
       class="btn btn-outline-primary btn-sm mb-3">
        Show messages
    </a>
}


<!--buton parasire grup-->
@if (User.Identity.IsAuthenticated)
{
    if (membership != null)
    {
        if (!membership.IsModerator)
        {
            <form asp-action="Leave" method="post">
                <input type="hidden" name="groupId" value="@Model.Id" />
                <button class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-box-arrow-up"></i> Leave group
                </button>
            </form>
        }
        else
        {
            <form asp-action="Leave"
                  method="post"
                  onsubmit="return confirmModeratorLeave(@ViewBag.IsModerator.ToString().ToLower())">
                <input type="hidden" name="groupId" value="@Model.Id" />
                <button class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-box-arrow-up"></i> Leave group
                </button>
            </form>

        }
    }
}


<!--butoane stergere si editare grup-->
@if (ViewBag.IsModerator == true || ViewBag.isAdmin)
{
    <div class="mt-2">

        @if (ViewBag.IsModerator == true)
        {
            <a asp-action="Edit"
                asp-route-id="@Model.Id"
                class="btn btn-sm btn-outline-primary me-2">
                <i class="bi bi-pencil-fill"></i> Edit group
            </a>
        }

        <a asp-action="Delete"
           asp-route-id="@Model.Id"
           class="btn btn-sm btn-outline-danger">
           <i class="bi bi-trash"></i> Delete
        </a>
        
    </div>
}


@section Scripts {
    <script>
        function confirmModeratorLeave(isModerator) {
            if (!isModerator) return true;

            return confirm(
                "You are the moderator of this group.\n\n" +
                "If you leave:\n" +
                "• the moderator role will be transferred to the oldest member\n" +
                "• OR the group will be deleted if no members remain\n\n" +
                "Do you want to continue?"
            );
        }
    </script>
}