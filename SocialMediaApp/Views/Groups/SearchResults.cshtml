@model List<SocialMediaApp.Models.Group>

@{
    ViewData["Title"] = "Search Results";
}

<div class="d-flex justify-content-center mt-5">
    <div class="w-700px-responsive">

        <h3 class="mb-4 text-center">Search Results</h3>

        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center">
                No groups found.
            </div>
        }
        else
        {
            <div class="list-group">
                @foreach (var group in Model)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center mb-2 p-3 border rounded hover-shadow">
                        <div>
                            <a asp-controller="Groups" asp-action="Show" asp-route-id="@group.Id" class="text-decoration-none fw-semibold">
                                <i class="bi bi-people me-1"></i> @group.Name
                            </a>
                            <p class="mb-0 text-muted small">
                                <i class="bi bi-card-text me-1"></i>
                                @group.Description
                            </p>
                        </div>
                        <span class="badge bg-primary rounded-pill">@group.Users.Count members</span>
                    </div>
                }
            </div>
        }

    </div>
</div>

<style>
    /* efect hover mai placut */
    .hover-shadow:hover {
        background-color: #f8f9fa;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        transition: all 0.2s ease-in-out;
    }

    .fw-semibold {
        font-weight: 600;
    }
</style>
