@model SocialMediaApp.Models.Group

<div class="d-flex justify-content-center mt-5">
    <div class="w-700px-responsive">

        <h3 class="mb-4 text-center">Edit group</h3>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <label asp-for="Name" class="form-label fw-semibold">
                    <i class="bi bi-people me-1"></i> Group name
                </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label fw-semibold">
                    <i class="bi bi-card-text me-1"></i> Description
                </label>
                <textarea asp-for="Description"
                          class="form-control"
                          rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Show"
                   asp-route-id="@Model.Id"
                   class="btn btn-outline-secondary px-4">
                    Cancel
                </a>

                <button type="submit" class="btn btn-primary px-4">
                    Save changes
                </button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
