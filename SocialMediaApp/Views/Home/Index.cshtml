@{
    ViewData["Title"] = "Welcome to MicroSocial";
}

@*
<div class="mt-2 text-muted small">
    ❤️ 💬 emoji in cod
</div>
*@

<div class="emoji-wall">
    <span>💬 ❤️ 📸 👥 🎵 🎬 🌍 💭 ⭐</span>
    <span>❤️ 📸 👥 🎵 🎬 🌍 💭 ⭐ 💬</span>
    <span>📸 👥 🎵 🎬 🌍 💭 ⭐ 💬 ❤️</span>
    <span>👥 🎵 🎬 🌍 💭 ⭐ 💬 ❤️ 📸</span>
</div>

<div class="container text-center mt-5">
    <h1 class="display-4 fw-bold">Welcome to MicroSocial</h1>
    <p class="lead text-muted mt-3">
        Connect with people. Share your moments. Follow what matters.
    </p>

    <div class="mt-4">
        <a asp-area="Identity"
           asp-page="/Account/Login"
           class="btn btn-primary btn-lg me-2">
            Log in
        </a>

        <a asp-area="Identity"
           asp-page="/Account/Register"
           class="btn btn-outline-secondary btn-lg">
            Sign up
        </a>
    </div>

    <hr class="my-5" />

    <h5 class="text-muted mb-3">What you can do on MicroSocial</h5>

    <div class="row justify-content-center">
        <div class="col-md-3">
            <i class="bi bi-chat-dots fs-1 text-primary"></i>
            <p class="mt-2">Post updates</p>
        </div>

        <div class="col-md-3">
            <i class="bi bi-people fs-1 text-success"></i>
            <p class="mt-2">Follow people</p>
        </div>

        <div class="col-md-3">
            <i class="bi bi-heart fs-1 text-danger"></i>
            <p class="mt-2">Like content</p>
        </div>
    </div>
</div>
