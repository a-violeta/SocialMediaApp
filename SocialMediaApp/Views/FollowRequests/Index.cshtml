@model IEnumerable<FollowRequestsViewModel>

<div class="d-flex flex-column align-items-center cursor-default">
    <div class="fs-2 mb-5 fw-semibold">
        Follow requests
    </div>
    
    @if (Model.Count() != 0) 
    {
        @foreach (var followRequest in Model)
        {
            <div class="cursor-pointer follow-request cursor-default d-flex justify-content-between align-items-center border border-1 rounded-2 p-3 mb-3">
                <input value="@followRequest.FollowerId" hidden />
                <div class="d-flex align-items-center ">
                    <div class="post-pfp-container">
                        <img src="~/images/Profiles/@followRequest.FollowerPfp"
                        class="me-3"/>
                    </div>
                    <div class="fs-6">
                        @followRequest.FollowerFirstName @followRequest.FollowerLastName
                    </div>
                </div>
                <div>
                    @if (!followRequest.Accepted) 
                    {
                        <button 
                            class="follow-accept btn btn-primary me-1"
                            data-user-id="@followRequest.FollowerId">
                            Accept
                        </button>
                        <button 
                            class="follow-delete btn btn-danger"
                            data-user-id="@followRequest.FollowerId">
                            Delete
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-secondary cursor-default" disabled>
                            Accepted
                        </button>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <i class="bi bi-people-fill text-muted fs-1"></i>
        <div class="text-muted text-wrap text-break">
            You currently don't have any follow requests.
        </div>
    }
</div>