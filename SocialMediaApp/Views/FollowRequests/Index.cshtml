@model IEnumerable<FollowRequestsViewModel>

<div class="d-flex flex-column align-items-center">
    <div class="fs-2 mb-5 fw-semibold">
        Follow requests
    </div>
    @foreach (var followRequest in Model)
    {
        <div class="follow-request cursor-default d-flex justify-content-between align-items-center border border-1 rounded-2 p-3 mb-3">
            <div class="d-flex align-items-center ">
                <div class="post-pfp-container">
                    <img src="~/images/Profiles/@followRequest.FollowerPfp"
                    class="me-3"/>
                </div>
                <div class="fs-6">
                    @followRequest.FollowerFirstName @followRequest.FollowerLastName
                </div>
            </div>
            <div>
                <button class="follow-accept-btn btn btn-primary me-1">
                    Accept
                </button>
                <button class="btn btn-danger">
                    Delete
                </button>
            </div>
        </div>
    }
</div>