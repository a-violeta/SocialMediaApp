@model SocialMediaApp.Models.Comment
@{
    ViewData["Title"] = "Edit Comment";
}

<div class="d-flex justify-content-center mt-5">
    <div class="w-700px-responsive">
        <h4>Edit Comment</h4>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Content" class="form-label">Content</label>
                <textarea asp-for="Content" class="form-control" rows="3">@Model.Content</textarea>
                <span asp-validation-for="Content"
                      class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Posts" asp-action="Show" asp-route-id="@Model.PostId" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
